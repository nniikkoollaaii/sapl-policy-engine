<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starters</artifactId>
		<version>2.1.5.RELEASE</version>
		<relativePath />
	</parent>

	<groupId>io.sapl</groupId>
	<artifactId>sapl-spring-boot-starter</artifactId>
	<version>2.0.0-SNAPSHOT</version>

	<name>Spring Boot Starter for the SAPL Policy Engine</name>

	<organization>
		<name>Dominic Heutelbeck</name>
	</organization>

	<inceptionYear>2019</inceptionYear>

	<licenses>
		<license>
			<name>Apache 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
		</license>
	</licenses>

	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/heutelbeck/sapl-policy-engine/issues</url>
	</issueManagement>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
		<maven.compiler.target>${java.version}</maven.compiler.target>
		<maven.compiler.source>${java.version}</maven.compiler.source>
	</properties>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>sapl-spring-boot-autoconfigure</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<distributionManagement>
		<repository>
			<id>openconjurer</id>
			<name>OpenConjurer Nexus Maven Release Repository</name>
			<url>http://nexus.openconjurer.org/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>openconjurer</id>
			<name>OpenConjurer Nexus Maven Snapshot Repository</name>
			<url>http://nexus.openconjurer.org/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
</project>
